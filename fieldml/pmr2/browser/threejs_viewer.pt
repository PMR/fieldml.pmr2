<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/@@pmr2-z3cform-macros/main">

<metal:slot metal:fill-slot="style_slot"
    i18n:domain="fieldml.pmr2">

  <style type="text/css"
      tal:content="string:@import url($portal_url/++resource++fieldml.pmr2.css/zinc.css);">
  </style>

</metal:slot>

<metal:slot metal:fill-slot="javascript_head_slot" 
    i18n:domain="fieldml.pmr2">

  <script type="text/javascript"
      tal:attributes="src string:$portal_url/++resource++fieldml.pmr2.js/console.js">
  </script>

  <script type="text/javascript"
      tal:attributes="src string:$portal_url/++resource++pmr2.opencmiss.js/three.min.js">
  </script>

  <script type="text/javascript"
      tal:attributes="src string:$portal_url/++resource++pmr2.opencmiss.js/zinc_threejs_control.js">
  </script>

  <script type="text/javascript"
      tal:attributes="src string:$portal_url/++resource++pmr2.opencmiss.js/pmr2.opencmiss.js">
  </script>

</metal:slot>

<body>

<metal:slot metal:fill-slot="main" i18n:domain="cmf_default">
  <div id="layout-contents">
    <h1>Zinc WebGL Viewer</h1>
    <div id="myText"></div>
    <div id="zinc_webgl_viewer" tal:attributes="data-src view/src;">
    </div>
  </div>
</metal:slot>

</body>
</html>
